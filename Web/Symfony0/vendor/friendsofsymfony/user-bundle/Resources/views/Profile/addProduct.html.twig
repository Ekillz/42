<html>
<header>
<script src="//code.jquery.com/jquery-1.11.3.min.js"></script>
<link href="/bundles/vmotors/css/bootstrap.min.css" rel="stylesheet">
<script src="/bundles/vmotors/js/bootstrap.min.js"></script>
<style type="text/css">
#productForm .availabilityContainer .form-control-feedback {
    right: 15px;
}
</style>
</header>
<body>
<form id="productForm" action="/app_dev.php/profile/addProduct" method="POST">
    <div class="form-group">
        <label>Product name</label>
        <input type="text" class="form-control" name="name" required/>
    </div>

    <div class="form-group">
        <label>Description</label>
        <textarea name="description" class="form-control" rows="5"></textarea>
    </div>

    <div class="form-group">
        <label>Image Url</label>
        <input type="text" class="form-control" name="path" required/>
    </div>

    <div class="form-group">
        <label>Price</label>
        <div class="input-group">
            <div class="input-group-addon">$</div>
            <input type="number" class="form-control" name="price" required/>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-xs-4">
                <label>Engine size</label>
                <div class="checkbox">
                    <label><input type="radio" name="size" value="50" required/> 50cc</label>
                </div>
                <div class="checkbox">
                    <label><input type="radio" name="size" value="125" required/> 125cc</label>
                </div>
                <div class="checkbox">
                    <label><input type="radio" name="size" value="999" required/> >125cc</label>
                </div>
            </div>

            <div class="col-xs-4">
                <label>Brand</label>
                <div class="checkbox">
                    <label><input type="radio" name="brand" value="aprilia" required/> Aprilia</label>
                </div>
                <div class="checkbox">
                    <label><input type="radio" name="brand" value="kawasaki" required/> Kawasaki</label>
                </div>
                <div class="checkbox">
                    <label><input type="radio" name="brand" value="yamaha" required/> Yamaha</label>
                </div>
                <div class="checkbox">
                    <label><input type="radio" name="brand" value="other" required/> Other</label>
                </div>
            </div>
            <div class="col-xs-4 availabilityContainer">
            <label>Stock</label>
            <label><input type="number" name="stock" required/></label>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Add product</button>
</form>
</body>
</html>