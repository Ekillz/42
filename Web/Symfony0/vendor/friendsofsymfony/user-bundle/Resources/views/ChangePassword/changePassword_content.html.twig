{% trans_default_domain 'FOSUserBundle' %}
<html>
<body>
 <script src="/bundles/vmotors/js/jquery.js"></script>
 <script src="/bundles/vmotors/js/bootstrap.min.js"></script>
 <link href="/bundles/vmotors/css/bootstrap.min.css" rel="stylesheet">
 <script src="/bundles/vmotors/js/change-passwd.js"></script>
<div class="container">
<div class="row">
<div class="col-sm-12">
<h1>Change Password</h1>
</div>
</div>
<div class="row">
<div class="col-sm-6 col-sm-offset-3">
<p class="text-center">Use the form below to change your password</p>

					{{ form_errors(form.current_password) }}
					{{ form_errors(form.plainPassword.first) }}
					{{ form_errors(form.plainPassword.second) }}
<form action="/app_dev.php/profile/change-password" method="POST" class="fos_user_change_password">
<input type="password" class="input-lg form-control" name="fos_user_change_password_form[current_password]" id="current-password" placeholder="Current Password" autocomplete="off">
<input type="password" class="input-lg form-control" name="fos_user_change_password_form[plainPassword][first]" id="password1" placeholder="New Password" autocomplete="off">
<div class="row">
<div class="col-sm-6">
<span id="8char" class="glyphicon glyphicon-remove" style="color:#FF0004;"></span> 4 Characters Long<br>
</div>
</div>
<input type="password" class="input-lg form-control" name="fos_user_change_password_form[plainPassword][second]" id="password2" placeholder="Repeat Password" autocomplete="off">
<div class="row">
<div class="col-sm-12">
<span id="pwmatch" class="glyphicon glyphicon-remove" style="color:#FF0004;"></span> Passwords Match
</div>
</div>
<input type="hidden" id="fos_user_change_password_form__token" name="fos_user_change_password_form[_token]" value="GjRf2pCnHdL9BIPb7dMBWW9tVrm9xtzgE2FcSRW0H2g">
<input type="submit" class="col-xs-12 btn btn-primary btn-load btn-lg"  value="Change Password">
</form>
</div><!--/col-sm-6-->
</div><!--/row-->
</div>
</body>
</html>