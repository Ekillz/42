{% trans_default_domain 'FOSUserBundle' %}
<html>
	<body background="http://www.hdcarwallpapers.in/hdwallpapers/biker-and-bike-wallpapers.jpg">
	<link href="/bundles/vmotors/css/login.css" rel="stylesheet">
	<link href="/bundles/vmotors/css/bootstrap.min.css" rel="stylesheet">
	<div class="container">
    	<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<div class="panel panel-login">
					<div class="panel-heading">
						<div class="row">
							<a href="/app_dev.php/register" class="active" id="register-form-link">Register</a>
						</div>
						<hr>
					</div>
					{{ form_errors(form.username) }}
					{{ form_errors(form.email) }}
					{{ form_errors(form.plainPassword.first) }}
					{{ form_errors(form.plainPassword.second) }}
					<div class="panel-body">
						<div class="row">
							<div class="col-lg-12">
								<form id="register-form" action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register" role="form">
									<div class="form-group">
									{{ form_widget(form._token) }}
										<input type="text" name="fos_user_registration_form[username]" id="username" tabindex="1" class="form-control" placeholder="Username" value="">
									</div>
									<div class="form-group">
										<input type="email" name="fos_user_registration_form[email]" id="email" tabindex="1" class="form-control" placeholder="Email Address" value="">
									</div>
									<div class="form-group">
										<input type="password" name="fos_user_registration_form[plainPassword][first]" id="password" tabindex="2" class="form-control" placeholder="Password">
									</div>
									<div class="form-group">
										<input type="password" name="fos_user_registration_form[plainPassword][second]" id="confirm-password" tabindex="2" class="form-control" placeholder="Confirm Password">
									</div>
									<div class="form-group">
										<div class="row">
											<div class="col-sm-6 col-sm-offset-3">
												<input type="submit" name="register-submit" id="register-submit" tabindex="4" class="form-control btn btn-register" value="{{ 'registration.submit'|trans }}">
											</div>
										</div>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<script src="//code.jquery.com/jquery-1.11.3.min.js"></script>
	<script src="/bundles/vmotors/js/bootstrap.min.js"></script>
	<script src="/bundles/vmotors/js/login.js" ></script>
	</body>
</html>
